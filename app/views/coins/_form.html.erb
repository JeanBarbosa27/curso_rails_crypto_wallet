<%= form_with(model: coin, local: true) do |form| %>
  <% if coin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

      <ul>
      <% coin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :coin_name %>
    <%= form.text_field :coin_name %>
  </div>

  <div class="field">
    <%= form.label :acronym %>
    <%= form.text_field :acronym %>
  </div>

  <div class="field">
    <%= form.label :image_url %>
    <%= image_tag coin.image_url, width: 25, height: 25 if coin.image_url != nil %>
    <br>
    <%= form.text_field :image_url %>
  </div>

  <div class="field">
    <%= form.label :mining_type_id %>
    <%= form.select(:mining_type_id, @mining_types_options, { include_blank: 'Selecione...' }) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
