<p id="notice"><%= notice %></p>

<h1>Moedas</h1>

<table>
  <thead>
    <tr>
      <th>Nome da moeda</th>
      <th>Sigla</th>
      <th>Imagem</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.coin_name %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.image_url, size: "25x25" %></td>
        <td><%= link_to 'Mostrar', coin %></td>
        <td><%= link_to 'Editar', edit_coin_path(coin) %></td>
        <td><%= link_to 'Apagar', coin, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Adicionar nova moeda', new_coin_path %>
