<p id="notice"><%= notice %></p>

<h1><%= t 'showing' %> <%= t @coin.model_name.human %></h1>

<form>
  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:coin_name) %>
    <%= text_field_tag nil, @coin.coin_name, class: "form-control", disabled: true %>
  </div>

  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:acronym) %>
    <%= text_field_tag nil, @coin.acronym, class: "form-control", disabled: true %>
  </div>

  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:image_url) %>
    <%= image_tag @coin.image_url, width: 25, height: 25 if @coin.image_url != nil %>
    <br>
    <%= text_field_tag nil, @coin.class.human_attribute_name(:image_url), class: "form-control", disabled: true %>
  </div>

  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:mining_type) %>
    <%= text_field_tag nil, @coin.mining_type.type_name, class: "form-control", disabled: true %>
  </div>

</form>

<%= link_to t('links.edit'), edit_coin_path(@coin), class: "btn btn-primary" %>
<%= link_to t('links.go_back'), coins_path, class: "btn btn-secondary" %>
