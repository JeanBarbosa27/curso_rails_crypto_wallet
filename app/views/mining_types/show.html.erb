<p id="notice"><%= notice %></p>

<h1><%= t 'showing' %> <%= t @mining_type.model_name.human %></h1>

<form>
  <div class="form-group">
    <%= label_tag nil, @mining_type.class.human_attribute_name(:type_name) %>
    <%= text_field_tag nil, @mining_type.type_name, class: "form-control", disabled: true %>
  </div>

  <div class="form-group">
    <%= label_tag nil, @mining_type.class.human_attribute_name(:acronym) %>
    <%= text_field_tag nil, @mining_type.acronym, class: "form-control", disabled: true %>
  </div>

</form>


<p>
  <%= link_to t('links.edit'), edit_mining_type_path(@mining_type), class: "btn btn-primary" %>
  <%= link_to t('links.go_back'), mining_types_path, class: "btn btn-secondary" %>
</p>
